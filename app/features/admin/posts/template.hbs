<div class="adminTitle">
  <h2>All Posts</h2>
</div>
<div class="adminActions">
  {{link-to 'Create Post' 'editor' class="btn primary"}}
</div>

<table id="posts">
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Type
      </th>
      <th>
        Status
      </th>
      <th>
        Published By
      </th>
      <th>
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |post|}}
      <tr>
        <td class="title">
          {{link-to post.title 'editor' (query-params id=post.id)}}
        </td>
        <td class="type">
          {{post.type}}
        </td>
        <td class="isDraft">
          {{post.isDraft}}
        </td>
        <td class="createdAt">
          {{post.createdAt}}
        </td>
        <td class="actions">
          {{link-to 'Edit' 'editor' (query-params id=post.id)}} | <a href="#" {{action 'delete' post}}>Delete</a>
        </td>
      </tr>
    {{else}}
      <tr>
        <td colspan="100" class="noPosts">
          No Posts
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>