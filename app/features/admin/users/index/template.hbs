<div class="adminTitle">
  <h2>Users</h2>
</div>

<div class="adminActions">
  {{link-to 'Create User' 'admin.users.new' class="btn primary"}}
</div>

<table id="users">
  <thead>
    <tr>
      <th>
        Full Name
      </th>
      <th>
        Username
      </th>
      <th>
        Email
      </th>
      <th>
        Roles
      </th>
      <th>
        Actions
      </th>
    </tr>
  </thead>
  <tbody>
    {{#each model as |user|}}
      <tr>
        <td>
          {{#link-to 'admin.users.show' user.id}}
            {{user.firstname}} {{user.lastname}}
          {{/link-to}}
        </td>
        <td>
          {{user.username}}
        </td>
        <td>
          {{user.email}}
        </td>
        <td>
          {{user.roles}}
        </td>
        <td>
          {{users-list-actions user=user session=session.data.authenticated deleteUser=deleteUser}}
        </td>
      </tr>
    {{/each}}
  </tbody>
</table>